<div class="center hero-unit">
  <h1>How are you, Twitter?</h1>

  <h2>Mine today's tweets to measure how people around the country feel right now.</h2>
  

<%= form_tag tweets_path, :method => :get, :class => "form-search text-center" do %>
  <div class="input-append">
    <h4 class="heading">Search for:</h4>
    <%= text_field_tag :q, params[:q], :class => "search-query" %>
    <%= button_tag "Go!", :type => "submit", :class => "btn btn-medium" %>
  </div>
 <!--   <%= render "shared/search_operators" %> -->
<% end %>
